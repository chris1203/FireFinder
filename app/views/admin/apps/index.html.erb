<div class="container">
	<div class="pull-right" style="padding-bottom: 30px;">
		<%= link_to("新增小程序", new_admin_app_path, class: "btn btn-danger") %>
	</div>
	
	<table class="table table-hover">
		<thead>
			<tr>
				<th>程序名</th>
				<th>管理选项</th>
				<th>发布时间</th>
			</tr>
		</thead>
		<tbody>
			<% @apps.each do |app| %>
				<tr>
					<td><%= link_to app.title, admin_app_path(app) %></td>
					<td>
						<%= link_to("Edit", edit_admin_app_path(app)) %>
						<%= link_to("Destroy", admin_app_path(app), method: :delete, data: { confirm: "Are you sure?"}) %>
					</td>
					<td><%= app.created_at.strftime("%Y-%m-%d") %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>